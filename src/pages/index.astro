---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CountUp from '../components/CountUp.astro';
import Section from '../components/Section.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '../components/ProjectCard.astro';
import SectionSpacer from '../components/SectionSpacer.astro';
import StatsGrid from '../components/StatsGrid.astro';
import InvestorGrid from '../components/InvestorGrid.astro';

const projects = await getCollection('projects');
---

<Layout title="Welcome to Astro.">
	<Header gridBg>
		<small class="small"></small>
		<h1 class="text-12 leading-12 lg:text-20 lg:leading-20"><span class="font-mono">SEO + AI</span> + WEB3</h1>
		<p class="subtitle w-85% lg:w-50% mx-auto mt-5">Builder. Optimizer. Thinker.</p>
	</Header>
	<main>
		<Section fullWidthBorder class="text-center flex flex-col items-center justify-center py-5">
			<h2 class="title py-5">Hi!</h2>
			<p class="subtitle-small">I'm an SEO professional who loves building things.<br/>Whether it's for smarter search, Web3 ideas, or personal projects, I use tech to solve real problems fast.<br/>Here are some stuff I build:</p>
			<SectionSpacer />
			<ul>
				<li><a href="/tools/seo-audit/">SEO Content Audit Tool</a></li>
				<li><a href="/tools/seo-brief/">SEO Content Brief Tool</a></li>
				<li><a href="/tools/seo-tdk/">SEO TDK Tool</a></li>
			</ul>
		</Section>
	
	</main>
</Layout>
